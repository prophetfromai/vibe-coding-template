{
  "name": "ai-code-assistant-template",
  "version": "0.1.0",
  "description": "Template for safely integrating AI-generated code into production applications",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/prophetfromai/vibe-coding-template.git"
  },
  "scripts": {
    "build": "webpack --mode production",
    "start": "webpack serve --mode development",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:unit": "jest --testPathPattern='src/.*\\.test\\.(js|ts)x?$'",
    "test:integration": "jest --testPathPattern='tests/integration/.*\\.test\\.(js|ts)x?$'",
    "test:e2e": "cypress run",
    "test:coverage": "jest --coverage",
    "test:smoke": "cypress run --spec 'cypress/e2e/smoke/**/*.cy.js'",
    "security:basic": "npm audit --production",
    "security:full": "eslint . --ext .js,.jsx,.ts,.tsx --config .eslintrc.security.js",
    "security:secrets": "echo 'Skipping secrets detection'",
    "docs:check": "documentation lint src/**/*.js",
    "docs:generate": "documentation build src/**/*.js -f html -o docs/api",
    "benchmark": "node tests/benchmark/run.js",
    "license:check": "license-checker --production --onlyAllow 'MIT;Apache-2.0;BSD-2-Clause;BSD-3-Clause'",
    "deploy:staging": "echo 'Deploying to staging environment'",
    "deploy:production": "echo 'Deploying to production environment'",
    "verify:deployment": "echo 'Verifying deployment'"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/hast": "^3.0.4",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/react": "^18.2.12",
    "@types/react-dom": "^18.2.5",
    "@types/unist": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "babel-loader": "^9.1.2",
    "cypress": "^12.14.0",
    "documentation": "^14.0.1",
    "eslint": "^8.43.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-security": "^1.7.1",
    "html-webpack-plugin": "^5.5.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "license-checker": "^25.0.1",
    "ts-jest": "^29.3.0",
    "typescript": "^5.1.3",
    "webpack": "^5.87.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
